   sn_humi     = 'drowned_q2_DFS5.2'       ,    3         , 'q2',   .true.   , .false. , 'yearly'  , 'weights_bilin.nc' , '', ''
   sn_prec     = 'drowned_precip_DFS5.2',   24         , 'precip',   .true.   , .false. , 'yearly'  , 'weights_bilin.nc' , '', ''
   sn_snow     = 'drowned_snow_DFS5.2',   24         , 'snow'    ,   .true.   , .false. , 'yearly'  , 'weights_bilin.nc' , '', ''
   sn_slp      = 'drowned_msl_DFS5.2'        ,           24         , 'MSL'     ,   .true.   , .false. , 'yearly'  , 'weights_bilin.nc' , '', ''
