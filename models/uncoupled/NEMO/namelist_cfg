   !           !                         !  (if <0  months)  !   name    !   (logical) !  (T/F) ! 'monthly' !                                      ! pairing  !    filename   !
   sn_wndi     = 'drowned_u10_DFS5.2'       ,    3         , 'u10',   .true.   , .false. , 'yearly'  , 'weights_bicubic.nc' , '', ''
   sn_wndj     = 'drowned_v10_DFS5.2'       ,    3         , 'v10',   .true.   , .false. , 'yearly'  , 'weights_bicubic.nc' , '', ''
   sn_qsr      = 'drowned_radsw_DFS5.2'   ,   24         , 'radsw',   .false.   , .false. , 'yearly'  , 'weights_bilin.nc' , '', ''
   sn_qlw      = 'drowned_radlw_DFS5.2'   ,   24         , 'radlw',   .false.   , .false. , 'yearly'  , 'weights_bilin.nc' , '', ''
